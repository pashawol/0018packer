		script(src="js/pace.min.js")
		script.
				Pace.on('start', function () {
				document.documentElement.className += " loading-proccessing";
			});

			Pace.on('hide', function () {
				document.getElementById("html-doc").className =
					document.getElementById("html-doc").className
					.replace(new RegExp('(?:^|\\s)' + 'loading-proccessing' + '(?:\\s|$)'), ' ');

				body.classList.remove('prld-on');
				var wow = new WOW({
					mobile: false
				});
				wow.init();
				setTimeout(function() {

					JSCCommon.mobileMenu();
				},100);
				allSlider();
			});
		style.
			.prld-on{
				overflow: hidden;
			}
			.pace {
				/* pointer-events: none; */
				user-select: none;
				z-index: 10000;
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100vh;
				background-color: #f9d749; 
				display: flex;
				justify-content: center;
				align-items: center;
				opacity: 1;
				 
			}

			.pace-inactive {
				opacity: 0;
				z-index: -100;
			}
			.pace .pace-progress {
				background: #e6c53a;
				position: fixed;
				z-index: 2000;
				top: 50%;
				margin-top: -.5px;
				right: 100%;
				width: 100%;
				height: 1px;
				transition: .05s ease-in transform;
				
			}
							.pace::after{
					content: url(img/prld.png);
					display: block;
					background-color: #f9d749; 
					position: fixed;
					z-index: 2000; 
					left: 50%;
					transform: translateX(-50%);
					margin-top: -.5px; 
					transition: .05s ease-in transform;
					}
