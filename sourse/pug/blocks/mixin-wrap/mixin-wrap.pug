mixin arrow()
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		 
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev 
mixin control-sl()
	.control-wrap
		+arrow()
		.swiper-pagination
 
mixin soc()
	+b.soc
		+e.A.item--vk(href="" target="_blank")
			+icon('vk')
		
		+e.A.item--fb(href="" target="_blank")
			+icon('fb')
		
		+e.A.item--instagram(href="" target="_blank")
			+icon('instagram')
		
		+e.A.item--play(href="" target="_blank")
			+icon('play')
			
